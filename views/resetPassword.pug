extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Reset Password
      form.form.form--resetPassword(data-token=token)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#resetPassword.form__input(type='password' placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='password') PasswordConfirm
          input#resetPasswordConfirm.form__input(type='password' placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green Reset