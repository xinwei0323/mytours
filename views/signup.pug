extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Sign Up
      form.form.form--signup
        .form__group
          label.form__label(for='name') Name
          input#signupName.form__input(type='text' placeholder='Enter Your Name', required)
        .form__group
          label.form__label(for='email') Email address
          input#signupEmail.form__input(type='email' placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#signupPassword.form__input(type='password' placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='password') PasswordConfirm
          input#signupPasswordConfirm.form__input(type='password' placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green Sign Up